          }
          
          .container {
            width: 80%;
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
          }
          
          h1 {
            margin-bottom: 20px;
            color: #4CAF50;
          }
          
          table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
          }
          
          th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
            vertical-align: middle;
          }
          
          th {
            background-color: #4CAF50;
            color: white;
          }
          
          tr:hover {
            background-color: #f1f1f1;
          }
          
          .course-image {
            width: 50px;
            height: 50px;
            object-fit: cover;
            border-radius: 5px;
            margin-right: 10px;
            vertical-align: middle;
          }    
